# http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

# The JSON files contain newlines inconsistently
[*.json]
insert_final_newline = ignore
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore
