{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "ES6",
    "moduleResolution": "node",
    "noEmit": false,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "lib": ["es2022", "dom", "dom.iterable"]
  }
}
